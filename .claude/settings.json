{
  "permissions": {
    "ask": ["Bash", "Write", "MultiEdit"],
    "allow": [
      "Read", 
      "Edit", 
      "Grep", 
      "Glob", 
      "LS", 
      "TodoWrite",
      "Bash(pixi run:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(pytest:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(git push --force)",
      "Bash(git reset --hard HEAD~)",
      "Bash(chmod 777 *)",
      "Bash(git push origin :*)",
      "Read(.env)",
      "Read(*.key)",
      "Read(*.pem)"
    ],
    "additionalDirectories": ["./utils", "./_data", "./_plugins"],
    "defaultMode": "acceptEdits"
  },
  
  "env": {
    "PIXI_ROOT": "E:/Code/python-deadlines",
    "PYTHONPATH": "E:/Code/python-deadlines/utils",
    "CONFERENCE_ENV": "development"
  },
  
  "hooks": {
    "PreToolUse": {
      "Edit": "./.claude/scripts/pre-edit-check.sh ${FILE_PATH}",
      "Write": "./.claude/scripts/pre-write-check.sh ${FILE_PATH}",
      "Bash": "./.claude/scripts/validate-command.sh '${COMMAND}'"
    },
    "PostToolUse": {
      "Edit": "./.claude/scripts/format-python.sh ${FILE_PATH}"
    }
  },
  
  "statusLine": {
    "type": "static",
    "content": "ðŸŽ¯ Python Deadlines | Conference CFP Tracker"
  },
  
  "outputStyle": "Concise",
  
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["time", "git", "filesystem"],
  
  "cleanupPeriodDays": 30,
  "includeCoAuthoredBy": false,
  "disableAllHooks": false
}